generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  USER
}
model User{
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String 
  role Role
  isActive Boolean
  createdAt DateTime @default(now())
 
 cartlines Cartline[]
 userRating userRating[]
  @@map("user")
}
model Cartline{
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  quantity Int
  createdAt DateTime @default(now())

user User @relation(fields: [userId], references: [id])
poster Poster @relation(fields: [posterId], references: [id])

  @@map("cartlines")
}
model Poster{
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  description String
  image String
  width Int
  height Int
  price Decimal
  stock Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

 cartlines Cartline[]
 userRating userRating[]
 genrePosterRel GenrePosterRel[]

 @@map("posters")
}
model userRating{
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  numStars Int
  createdAt DateTime @default(now())

   user User @relation(fields: [userId], references: [id])
   poster Poster @relation(fields: [posterId], references: [id])

  @@map("userRatings")
}
model Genre{
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  genrePosterRel GenrePosterRel[]

  @@map("genres")
}
model GenrePosterRel{
  id Int @id @default(autoincrement())
  genreId Int 
  posterId Int

genre Genre @relation(fields: [genreId], references: [id])
poster Poster @relation(fields: [posterId], references: [id])

@@map("genrePosterRel")
}