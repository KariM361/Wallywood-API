generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  USER
}
model Users{
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String 
  role Role
  isActive Boolean
  createdAt DateTime @default(now())
 
  @@map("users")
}
model cartlines{
  id Int @id @default(autoincrement())
  userId Int
  postertId Int
  quantity Int
  createdAt DateTime

  @@map("cartlines")
}
model posters{
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  description String
  image String
  width Int
  height Int
  price Decimal
  stock Int
  createdAt DateTime
  updatedAt DateTime

  @@map("posters")
}
model userRatings{
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  numStars Int
  createdAt DateTime

  @@map("userRatings")
}
model genres{
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  createdAt DateTime
  updatedAt DateTime

  @@map("genres")
}
model genrePosterRel{
  id Int @id @default(autoincrement())
  genreId Int 
  posterId Int 

@@map("genrePosterRel")
}